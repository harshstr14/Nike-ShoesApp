<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:background="#F8F9FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FF8A80"
            android:paddingTop="25dp"
            app:title="">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/cartBackground"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/txtinputlayout_bg"
                    app:layout_constraintBottom_toBottomOf="@+id/cartImage"
                    app:layout_constraintEnd_toEndOf="@+id/cartImage"
                    app:layout_constraintStart_toStartOf="@+id/cartImage"
                    app:layout_constraintTop_toTopOf="@+id/cartImage" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView"
                    android:layout_width="78dp"
                    android:layout_height="40dp"
                    android:paddingTop="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/nike_logo" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/cartImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/appCompatImageView"
                    app:srcCompat="@drawable/cart"
                    app:tint="#000000"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <EditText
            android:id="@+id/searchView"
            android:layout_below="@id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:focusable="false"
            android:clickable="false"
            android:drawableStart="@drawable/search"
            android:hint="Looking for shoes"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/txtinputlayout_bg"
            android:paddingStart="12dp"
            android:drawablePadding="10dp"
            android:textColorHint="#707B81"
            android:textSize="16sp"
            android:fontFamily="sans-serif"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="-75dp"
            android:layout_below="@id/searchView"
            android:layout_above="@id/frameLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:iss_auto_cycle="true"
                    app:iss_period="2000"
                    app:iss_delay="2000"
                    android:background="@android:color/transparent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoryRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/image_slider"
                    android:clipToPadding="false"
                    android:layout_marginStart="20dp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_below="@id/categoryRecyclerView"
                    android:orientation="vertical" />

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:src="@drawable/shape_with_shadow"
                android:scaleType="fitXY"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:id="@+id/bottomNav"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal|center_vertical"
                android:background="@android:color/transparent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/bottom_nav_home"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:padding="6dp"
                    app:srcCompat="@drawable/home"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    app:tint="@color/nav_item_color"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/bottom_nav_fav"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:padding="6dp"
                    app:srcCompat="@drawable/favourite"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="24dp"
                    app:tint="@color/nav_item_color"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:srcCompat="@drawable/cart"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:padding="6dp"
                    android:visibility="invisible"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="18dp"
                    app:tint="@color/nav_item_color"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@id/bottom_nav_notification"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:padding="6dp"
                    app:srcCompat="@drawable/notification"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="24dp"
                    app:tint="@color/nav_item_color"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/bottom_nav_user"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="6dp"
                    app:srcCompat="@drawable/user"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="5dp"
                    app:tint="@color/nav_item_color"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="45dp"
                android:src="@drawable/circle" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/bottom_nav_cart"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="65dp"
                android:src="@drawable/cart"
                android:tint="#FFFFFF" />
        </FrameLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="#1A2530"
        app:itemTextColor="@color/white"
        app:itemIconTint="#707B81"
        app:itemIconPadding="18dp"
        app:itemIconSize="28dp"
        app:itemTextAppearanceActiveBoldEnabled="true"
        app:itemTextAppearance="@style/NavDrawerItemText"
        app:itemHorizontalPadding="20dp"
        app:itemVerticalPadding="12dp"
        app:itemBackground="@drawable/nav_item_background"
        app:headerLayout="@layout/nav_header_home"
        app:menu="@menu/activity_home_drawer"
        />

</androidx.drawerlayout.widget.DrawerLayout>