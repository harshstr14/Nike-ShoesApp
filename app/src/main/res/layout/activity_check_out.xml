<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#F8F9FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOut">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backArrowImage"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/txtinputlayout_bg"
        app:layout_constraintBottom_toBottomOf="@+id/backArrowbtn"
        app:layout_constraintEnd_toEndOf="@+id/backArrowbtn"
        app:layout_constraintStart_toStartOf="@+id/backArrowbtn"
        app:layout_constraintTop_toTopOf="@+id/backArrowbtn"/>

    <ImageButton
        android:id="@+id/backArrowbtn"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/todo"
        android:src="@drawable/outline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="Checkout"
        android:textColor="#1A2530"
        android:textSize="18.5sp"
        app:layout_constraintBottom_toBottomOf="@+id/backArrowImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backArrowImage" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/checkout_background"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Information"
            android:textSize="14sp"
            android:textColor="#1A2530"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:layout_marginStart="22dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/merriweathersans_regular"
            android:textSize="11sp"
            android:textColor="#707B81"
            android:layout_below="@id/textView"
            android:layout_marginStart="73.5dp"
            android:layout_marginTop="32dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:fontFamily="@font/merriweathersans_regular"
            android:textSize="11sp"
            android:textColor="#707B81"
            android:layout_below="@id/textView5"
            android:layout_marginStart="73.5dp"
            android:layout_marginTop="36dp"/>

        <include
            android:id="@+id/email"
            layout="@layout/edit_email"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView" />

        <include
            android:id="@+id/phone"
            layout="@layout/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="14sp"
            android:textColor="#1A2530"
            android:layout_below="@id/phone"
            android:fontFamily="@font/merriweathersans_semibold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="22dp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="67dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:scrollHorizontally="false"
            android:fontFamily="@font/merriweathersans_regular"
            android:text="Newahall St 36, London, 12908 - UK"
            android:textColor="#707B81"
            android:textSize="12.5sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrowDown"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="8dp"
            android:layout_below="@id/textView7"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/arrow_down" />

        <LinearLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_below="@id/textView8">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/map"
                android:scaleType="fitXY"
                android:layout_marginHorizontal="22dp"
                android:layout_marginVertical="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_below="@id/textView8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Line"
                android:layout_marginTop="5dp"
                android:textSize="12.5sp"
                android:fontFamily="@font/merriweathersans_semibold"
                android:textColor="#1A2530"
                android:layout_marginStart="22dp"/>

            <include android:id="@+id/address"
                layout="@layout/edit_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="12.5sp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/merriweathersans_semibold"
                android:textColor="#1A2530"
                android:layout_marginStart="22dp"/>

            <include android:id="@+id/city"
                layout="@layout/edit_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:layout_marginTop="3dp"
                android:textSize="12.5sp"
                android:fontFamily="@font/merriweathersans_semibold"
                android:textColor="#1A2530"
                android:layout_marginStart="22dp"/>

            <include android:id="@+id/country"
                layout="@layout/edit_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZIP/postcode"
                android:textSize="12.5sp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/merriweathersans_semibold"
                android:textColor="#1A2530"
                android:layout_marginStart="22dp"/>

            <include android:id="@+id/postcode"
                layout="@layout/edit_postcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textSize="14sp"
            android:textColor="#1A2530"
            android:layout_below="@id/textView8"
            android:layout_marginTop="180dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:layout_marginStart="22dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/rectangle_background"
            app:tint="#F8F9FA"
            android:layout_below="@id/textView9"
            android:layout_marginStart="22dp"
            android:layout_marginTop="15dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/textView9"
            android:layout_marginStart="32.5dp"
            android:layout_marginTop="24.5dp"
            app:srcCompat="@drawable/card_logo" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Holder Name"
            android:fontFamily="@font/merriweathersans_regular"
            android:textSize="12sp"
            android:textColor="#1A2530"
            android:layout_toEndOf="@id/imageView3"
            android:layout_below="@id/textView9"
            android:layout_marginTop="16dp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweathersans_regular"
            android:text="**** Card Number"
            android:textSize="10sp"
            android:textColor="#707B81"
            android:layout_toEndOf="@id/imageView3"
            android:layout_below="@id/textView10"
            android:layout_marginTop="2.5dp"
            android:layout_marginStart="15dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/addCardImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignStart="@+id/addCardBtn"
            android:layout_alignTop="@+id/addCardBtn"
            android:layout_alignEnd="@+id/addCardBtn"
            android:layout_alignBottom="@+id/addCardBtn"
            android:layout_marginStart="-6dp"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="-6dp"
            android:layout_marginBottom="-6dp"
            android:background="@drawable/txtinputlayout_bg"
            android:backgroundTint="#F8F9FA" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/addCardBtn"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignTop="@+id/appCompatImageView2"
            android:layout_alignBottom="@+id/appCompatImageView2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="40.5dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/tranparent"
            android:scaleType="fitXY"
            android:tint="#1A2530"
            app:srcCompat="@drawable/outline_add_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottam_bg"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="Subtotal"
            android:textColor="#707B81"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="Shopping Fee"
            android:textColor="#707B81"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/subTotalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:textColor="#1A2530"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="$ 00.00"
            android:textSize="16.5sp" />

        <TextView
            android:id="@+id/shoppingFeeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subTotalText"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:textColor="#1A2530"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="$ 00.00"
            android:textSize="16.5sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_marginVertical="8dp"
            android:layout_centerHorizontal="true"
            android:text="- - - - - - - - - - - - - - - - - - - - - - - - -"
            android:textColor="#EEEEEE"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="Total Cost"
            android:textColor="#1A2530"
            android:textSize="16.5sp" />

        <TextView
            android:id="@+id/totalCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="$ 00.00"
            android:textColor="#1A2530"
            android:textSize="17sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/paymentBtn"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:backgroundTint="#5B9EE1"
            android:padding="16.5dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="Payment"
            android:textColor="#F8F9FA"
            android:textSize="16sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>