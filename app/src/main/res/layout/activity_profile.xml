<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#F8F9FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backArrowImage"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/txtinputlayout_bg"
        app:layout_constraintBottom_toBottomOf="@+id/backArrowbtn"
        app:layout_constraintEnd_toEndOf="@+id/backArrowbtn"
        app:layout_constraintStart_toStartOf="@+id/backArrowbtn"
        app:layout_constraintTop_toTopOf="@+id/backArrowbtn"/>

    <ImageButton
        android:id="@+id/backArrowbtn"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/todo"
        android:src="@drawable/outline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="Profile"
        android:textColor="#1A2530"
        android:textSize="18.5sp"
        app:layout_constraintBottom_toBottomOf="@+id/backArrowImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backArrowImage" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@color/tranparent"
        android:src="@drawable/edit"
        android:tint="#5B9EE1"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/userlogo"
        android:layout_marginTop="45dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backArrowImage1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/txtinputlayout_bg"
        android:backgroundTint="#5B9EE1"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="@+id/imageButton" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/tranparent"
        android:src="@drawable/camera"
        android:layout_marginTop="-9dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="@+id/profile_image"
        app:layout_constraintStart_toStartOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/merriweathersans_semibold"
        android:textColor="#1A2530"
        android:textSize="17.5sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_image"
        app:layout_constraintStart_toStartOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/backArrowImage1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="Full Name"
        android:textColor="#1A2530"
        android:textSize="13sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="@+id/nameEditText"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:textColor="#707B81"
        android:textSize="14sp"
        android:layout_marginHorizontal="32dp"
        android:paddingHorizontal="15dp"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:background="@drawable/txtinputlayout_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="Email Address"
            android:textColor="#1A2530"
            android:layout_marginStart="5dp"
            android:textSize="13sp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="@+id/emailEditText"
            app:layout_constraintTop_toBottomOf="@+id/nameEditText" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:textColor="#707B81"
        android:textSize="14sp"
        android:clickable="false"
        android:focusable="false"
        android:cursorVisible="false"
        android:paddingHorizontal="15dp"
        android:layout_marginHorizontal="32dp"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:background="@drawable/txtinputlayout_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="Phone No."
        android:textColor="#1A2530"
        android:textSize="13sp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@+id/phoneEditText"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:textColor="#707B81"
        android:textSize="14sp"
        android:paddingHorizontal="15dp"
        android:layout_marginHorizontal="32dp"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:background="@drawable/txtinputlayout_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/updateProfileBtn"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#5B9EE1"
        android:padding="16.5dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Update Profile"
        android:textColor="#F8F9FA"
        android:textSize="16sp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>