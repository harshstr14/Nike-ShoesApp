<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="160dp"
        android:layout_height="224dp"
        android:backgroundTint="#EFEFEF"
        app:cardCornerRadius="18dp"
        app:cardElevation="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/shoesImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nike_dunk"
            android:rotation="-28"
            android:layout_marginStart="-15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="-56dp"
            android:layout_marginBottom="28dp"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/shoesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nike Dunk Low"
            android:textSize="14sp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:textColor="#1A2530"
            android:layout_marginStart="10dp"
            android:layout_marginTop="143dp"/>

        <TextView
            android:id="@+id/shoesType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargo Khaki"
            android:textSize="12sp"
            android:fontFamily="@font/merriweathersans_regular"
            android:textColor="#707B81"
            android:layout_marginStart="10dp"
            android:layout_marginTop="163dp"/>

        <TextView
            android:id="@+id/shoesPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$103.20"
            android:textSize="13sp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:textColor="#1A2530"
            android:layout_marginStart="10dp"
            android:layout_marginTop="185dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_background"
            android:layout_gravity="bottom|end"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/outline_arrow_forward_24"
            app:tint="@color/white"
            android:layout_gravity="bottom|end"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="4dp"/>
    </androidx.cardview.widget.CardView>