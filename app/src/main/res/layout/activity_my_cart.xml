<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#F8F9FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCart">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backArrowImage"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/txtinputlayout_bg"
        app:layout_constraintBottom_toBottomOf="@+id/backArrowbtn"
        app:layout_constraintEnd_toEndOf="@+id/backArrowbtn"
        app:layout_constraintStart_toStartOf="@+id/backArrowbtn"
        app:layout_constraintTop_toTopOf="@+id/backArrowbtn"/>

    <ImageButton
        android:id="@+id/backArrowbtn"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/todo"
        android:src="@drawable/outline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="My Cart"
        android:textColor="#1A2530"
        android:textSize="18.5sp"
        app:layout_constraintBottom_toBottomOf="@+id/backArrowImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backArrowImage" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="15dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView12"
        tools:listitem="@layout/item_cart" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottam_bg"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="Subtotal"
            android:textColor="#707B81"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="Shopping Fee"
            android:textColor="#707B81"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/subTotalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:textColor="#1A2530"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="$ 00.00"
            android:textSize="16.5sp" />

        <TextView
            android:id="@+id/shoppingFeeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subTotalText"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:textColor="#1A2530"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="$ 00.00"
            android:textSize="16.5sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_marginVertical="8dp"
            android:layout_centerHorizontal="true"
            android:text="- - - - - - - - - - - - - - - - - - - - - - - - -"
            android:textColor="#EEEEEE"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="Total Cost"
            android:textColor="#1A2530"
            android:textSize="16.5sp" />

        <TextView
            android:id="@+id/totalCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="$ 00.00"
            android:textColor="#1A2530"
            android:textSize="17sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/checkOutBtn"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:backgroundTint="#5B9EE1"
            android:padding="16.5dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="Checkout"
            android:textColor="#F8F9FA"
            android:textSize="16sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>