<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottam_bg">

    <View
        android:id="@+id/view"
        android:layout_width="45dp"
        android:layout_height="4dp"
        android:background="@drawable/bg_drag_handle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backArrowImage"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:visibility="invisible"
        android:background="@drawable/txtinputlayout_bg"
        app:layout_constraintBottom_toBottomOf="@+id/backArrowbtn"
        app:layout_constraintEnd_toEndOf="@+id/backArrowbtn"
        app:layout_constraintStart_toStartOf="@+id/backArrowbtn"
        app:layout_constraintTop_toTopOf="@+id/backArrowbtn"/>

    <ImageButton
        android:id="@+id/backArrowbtn"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/todo"
        android:src="@drawable/outline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="@+id/appCompatImageView5"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="Credit Card"
        android:textColor="#1A2530"
        android:textSize="14sp"
        android:layout_marginTop="-4dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/backArrowbtn"
        app:layout_constraintStart_toEndOf="@+id/backArrowbtn"
        app:layout_constraintTop_toTopOf="@+id/backArrowbtn" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView5"
        android:layout_width="325dp"
        android:layout_height="190dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/card_matt_black" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView6"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="@+id/appCompatImageView5"
        app:layout_constraintTop_toTopOf="@+id/appCompatImageView5"
        app:srcCompat="@drawable/card_logo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView6"
        app:layout_constraintStart_toStartOf="@+id/appCompatImageView5"
        app:layout_constraintTop_toTopOf="@+id/appCompatImageView6"
        app:srcCompat="@drawable/card_sim" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/merriweathersans_regular"
        android:text="1234  5678  4578  1235"
        android:textColor="#F8F9FA"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/appCompatImageView7"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView7" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card holder name"
        android:textColor="#F8F9FA"
        android:textSize="8sp"
        android:fontFamily="@font/merriweathersans_regular"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jhon Wick"
        android:textColor="#F8F9FA"
        android:textSize="12sp"
        android:fontFamily="@font/merriweathersans_semibold"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweathersans_regular"
        android:text="Expiry date"
        android:textColor="#F8F9FA"
        android:textSize="8sp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="02/30"
        android:textColor="#F8F9FA"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweathersans_regular"
        android:text="CVV"
        android:textColor="#F8F9FA"
        android:textSize="8sp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="478"
        android:textColor="#F8F9FA"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="Card Holder Name"
        android:textColor="#1A2530"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/editText1"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView5" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_background"
        android:hint="Card Holder Name"
        android:inputType="text"
        android:textSize="15sp"
        android:textColor="#707B81"
        android:textColorHint="#707B81"
        android:paddingHorizontal="12dp"
        android:layout_marginHorizontal="12dp"
        android:textCursorDrawable="@drawable/custom_cursor"
        app:layout_constraintEnd_toEndOf="@+id/appCompatImageView5"
        app:layout_constraintStart_toStartOf="@+id/appCompatImageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="Card Number"
        android:textColor="#1A2530"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/editText1"
        app:layout_constraintTop_toBottomOf="@+id/editText1" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_background"
        android:hint="Card Number"
        android:paddingHorizontal="12dp"
        android:inputType="text"
        android:textSize="15sp"
        android:textColor="#707B81"
        android:maxLength="19"
        android:layout_marginHorizontal="12dp"
        android:textColorHint="#707B81"
        android:textCursorDrawable="@drawable/custom_cursor"
        app:layout_constraintEnd_toEndOf="@+id/appCompatImageView5"
        app:layout_constraintStart_toStartOf="@+id/appCompatImageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="Expiry Date"
        android:textColor="#1A2530"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/editText3"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText3"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_background"
        android:hint="Expiry Date"
        android:paddingHorizontal="12dp"
        android:inputType="text"
        android:textColor="#707B81"
        android:textColorHint="#707B81"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/editText2"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="CVV"
        android:textColor="#1A2530"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/editText4"
        app:layout_constraintTop_toTopOf="@+id/textView11" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText4"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:hint="CVV"
        android:paddingHorizontal="12dp"
        android:inputType="number"
        android:textColorHint="#707B81"
        android:textColor="#707B81"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:textSize="15sp"
        android:maxLength="3"
        app:layout_constraintBottom_toBottomOf="@+id/editText3"
        app:layout_constraintEnd_toEndOf="@+id/editText2"
        app:layout_constraintTop_toTopOf="@+id/editText3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="#5B9EE1"
        android:padding="16.5dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Continue"
        android:textColor="#F8F9FA"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/editText4"
        app:layout_constraintStart_toStartOf="@+id/editText3"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

</androidx.constraintlayout.widget.ConstraintLayout>