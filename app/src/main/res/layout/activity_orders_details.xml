<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#F8F9FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrdersDetails">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backArrowImage"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/txtinputlayout_bg"
        app:layout_constraintBottom_toBottomOf="@+id/backArrowbtn"
        app:layout_constraintEnd_toEndOf="@+id/backArrowbtn"
        app:layout_constraintStart_toStartOf="@+id/backArrowbtn"
        app:layout_constraintTop_toTopOf="@+id/backArrowbtn"/>

    <ImageButton
        android:id="@+id/backArrowbtn"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/todo"
        android:src="@drawable/outline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="Order Detail"
        android:textColor="#1A2530"
        android:textSize="18.5sp"
        app:layout_constraintBottom_toBottomOf="@+id/backArrowImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backArrowImage" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/checkout_background"
        android:gravity="center_vertical"
        android:paddingVertical="18dp"
        android:paddingStart="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="Transaction ID : "
            android:textColor="#1A2530"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/transactionIDTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/textView15"
            android:fontFamily="@font/merriweathersans_regular"
            android:text="012548987456"
            android:textColor="#707B81"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/textView15"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="Order ID : "
            android:textColor="#1A2530"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/orderIDTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/textView"
            android:layout_below="@id/textView15"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/merriweathersans_regular"
            android:text="987456"
            android:textColor="#707B81"
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView10"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_below="@id/orderIDTextView"
            android:layout_marginStart="18dp"
            android:layout_marginTop="9.5dp"
            app:srcCompat="@drawable/calender"
            app:tint="#707B81" />

        <TextView
            android:id="@+id/dayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderIDTextView"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/appCompatImageView10"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="28 Dec 2025"
            android:textColor="#1A2530"
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView11"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_below="@id/orderIDTextView"
            android:layout_marginStart="8dp"
            android:layout_marginTop="9.5dp"
            android:layout_toEndOf="@id/dayTextView"
            app:srcCompat="@drawable/clock"
            app:tint="#707B81" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderIDTextView"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/appCompatImageView11"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="02 : 25 pm"
            android:textColor="#1A2530"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dayTextView"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/merriweathersans_regular"
            android:text="Delivered To"
            android:textColor="#707B81"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="Newahall St 36, London, 12908 - UK"
            android:textColor="#1A2530"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressTextView"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/merriweathersans_regular"
            android:text="Payment Method"
            android:textColor="#707B81"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="Credit Card"
            android:textColor="#1A2530"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/merriweathersans_semibold"
        android:text="Product"
        android:textColor="#1A2530"
        android:textSize="16sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout3"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/checkout_background"
        android:gravity="center_vertical"
        android:paddingVertical="18dp"
        android:paddingStart="2dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <TextView
            android:id="@+id/productTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="Nike Dunk Low Retro x 2"
            android:textColor="#1A2530"
            android:textSize="13sp"
            android:fontFamily="@font/merriweathersans_regular"/>


        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/merriweathersans_regular"
            android:text="$ 150"
            android:textColor="#1A2530"
            android:textSize="13sp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productTextView"
            android:layout_marginStart="18dp"
            android:text="Subtotal"
            android:textColor="#707B81"
            android:textSize="13sp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/merriweathersans_semibold"/>

        <TextView
            android:id="@+id/subtotalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:text="$ 150"
            android:textColor="#1A2530"
            android:textSize="13sp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/merriweathersans_semibold"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="Shopping Fee"
            android:layout_marginTop="8dp"
            android:textColor="#707B81"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/shoppingFeeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:text="$ 40"
            android:textColor="#1A2530"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/merriweathersans_semibold"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"
            android:layout_marginStart="18dp"
            android:text="Total Cost"
            android:textColor="#707B81"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:fontFamily="@font/merriweathersans_semibold"/>

        <TextView
            android:id="@+id/totalCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:text="$ 190"
            android:textColor="#1A2530"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/merriweathersans_semibold"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:layout_centerHorizontal="true"
            android:text="- - - - - - - - - - - - - - - - - - - - - -"
            android:textColor="#EEEEEE"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView14"
            android:layout_marginStart="18dp"
            android:text="Paid"
            android:textColor="#1A2530"
            android:textSize="13sp"
            android:fontFamily="@font/merriweathersans_semibold"/>

        <TextView
            android:id="@+id/paidTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView14"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:text="$ 190"
            android:textColor="#1A2530"
            android:textSize="13sp"
            android:fontFamily="@font/merriweathersans_semibold"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>